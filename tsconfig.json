{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["jest", "node"]
    },
    "include": [
      "server.ts",
      "config/**/*.ts",
      "controllers/**/*.ts",
      "models/**/*.ts",
      "routes/**/*.ts",
      "__tests__/**/*.ts",
      "test/**/*.ts"
    ]
  }